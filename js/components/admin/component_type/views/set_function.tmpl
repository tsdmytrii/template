<form class='form-inline functionForm'>

    <input type='hidden' value="{{if our_data}}${our_data.id}{{/if}}" name='id' class='formId' />
    <input type='hidden' value="${component_type_id}" name='component_type_id' />

    <div class="form-group">
        <label class="sr-only" for="name">${lang.comp_type.function}:</label>
        <input type="text" name="name" value="{{if our_data}}${our_data.name}{{/if}}" class='form-control' placeholder="${lang.comp_type.function}" />
    </div>

    <div class="form-group">
        <label class="sr-only" for="clear_name">${lang.comp_type.function_clear}:</label>
        <input type="text" name="clear_name" value="{{if our_data}}${our_data.clear_name}{{/if}}" class='form-control' placeholder="${lang.comp_type.function_clear}" />
    </div>

    <div class="form-group">
        <div class="btn btn-default saveFunction">
            <span title="${lang.comp_type.function_save}" class="glyphicon glyphicon-ok"></span>
        </div>
        <div class="btn btn-danger deleteFunction">
            <span title="${lang.comp_type.function_remove}" class="glyphicon {{if our_data}}glyphicon-trash{{else}}glyphicon-remove{{/if}}"></span>
        </div>
    </div>

    <div class="clear"></div>

</form>