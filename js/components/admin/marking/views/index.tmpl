<form class="form-horizontal" id="markingForm">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">${lang.marking.info}</h3>
        </div>
        <div class="panel-body">

            <input type="hidden" name="id" value="{{if $data.marking && $data.marking.id}}${$data.marking.id}{{/if}}"/>

            <div class="form-group">
                <label for="min_width" class="col-md-3 control-label">${lang.marking.min_width}</label>
                <div class="col-md-8">
                    <input class="form-control" name="min_width" value="{{if $data.marking && $data.marking.min_width}}${$data.marking.min_width}{{/if}}"/>
                    <span class="help help-block"></span>
                </div>
            </div>

            <div class="form-group">
                <label for="max_width" class="col-md-3 control-label">${lang.marking.max_width}</label>
                <div class="col-md-8">
                    <input class="form-control" name="max_width" value="{{if $data.marking && $data.marking.max_width}}${$data.marking.max_width}{{/if}}"/>
                    <span class="help help-block"></span>
                </div>
            </div>

            <div class="form-group">
                <label for="width" class="col-md-3 control-label">${lang.marking.width}</label>
                <div class="col-md-8">
                    <input class="form-control" name="width" value="{{if $data.marking && $data.marking.width}}${$data.marking.width}{{/if}}"/>
                    <span class="help help-block"></span>
                </div>
            </div>

            <div class="form-group">
                <label for="height" class="col-md-3 control-label">${lang.marking.height}</label>
                <div class="col-md-8">
                    <input class="form-control" name="height" value="{{if $data.marking && $data.marking.height}}${$data.marking.height}{{/if}}"/>
                    <span class="help help-block"></span>
                </div>
            </div>

            <div class="form-group">
                <label for="min_font_size" class="col-md-3 control-label">${lang.marking.min_font_size}</label>
                <div class="col-md-8">
                    <input class="form-control" name="min_font_size" value="{{if $data.marking && $data.marking.min_font_size}}${$data.marking.min_font_size}{{/if}}"/>
                    <span class="help help-block"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <button class="btn btn-primary pull-right" type="submit">${lang.save}</button>
                </div>
            </div>
        </div>
    </div>

</form>
